<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/borderSelectedColor" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <padding
                android:bottom="@dimen/border_padding"
                android:left="@dimen/border_padding"
                android:right="@dimen/border_padding"
                android:top="@dimen/border_padding" />

            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
        </shape>
    </item>
</layer-list>
