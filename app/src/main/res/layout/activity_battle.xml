                android:layout_marginBottom="@dimen/moves_btn_margin_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/moves_btn_bot_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/moves_btn_top_right"/>

            <Button
                android:id="@+id/moves_btn_top_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/moves_btn_text_size"
                android:text="@string/sp"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/moves_btn_margin_horizontal_between_parent"
                android:layout_marginLeft="@dimen/moves_btn_margin_horizontal"
                android:layout_marginTop="@dimen/moves_btn_margin_vertical_between_parent"
                android:layout_marginBottom="@dimen/moves_btn_margin_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/moves_btn_bot_right"
                app:layout_constraintLeft_toRightOf="@id/moves_btn_top_left"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/moves_btn_bot_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/moves_btn_text_size"
                android:text="@string/gen"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/moves_btn_margin_horizontal_between_parent"
                android:layout_marginRight="@dimen/moves_btn_margin_horizontal"
                android:layout_marginTop="@dimen/moves_btn_margin_vertical"
                android:layout_marginBottom="@dimen/moves_btn_margin_vertical_between_parent"
                app:layout_constraintTop_toBottomOf="@id/moves_btn_top_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/moves_btn_bot_right"/>

            <Button
                android:id="@+id/moves_btn_bot_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/moves_btn_text_size"
                android:text="@string/sp_2"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/moves_btn_margin_horizontal_between_parent"
                android:layout_marginLeft="@dimen/moves_btn_margin_horizontal"
                android:layout_marginTop="@dimen/moves_btn_margin_vertical"
                android:layout_marginBottom="@dimen/moves_btn_margin_vertical_between_parent"
                app:layout_constraintTop_toBottomOf="@id/moves_btn_top_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/moves_btn_bot_left"
                app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/player_items_clo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/player_items_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/player_items_img_first"
                    android:layout_width="@dimen/player_items_img_width"
                    android:layout_height="@dimen/player_items_img_height"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/player_items_txt_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/player_items_txt_text_size"
                    android:text="@string/default_item_name"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/player_items_img_first"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/player_items_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/player_items_first"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/player_items_img_second"
                    android:layout_width="@dimen/player_items_img_width"
                    android:layout_height="@dimen/player_items_img_height"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/player_items_txt_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/player_items_txt_text_size"
                    android:text="@string/default_item_name"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/player_items_img_second"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/player_items_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/player_items_second"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/player_items_img_third"
                    android:layout_width="@dimen/player_items_img_width"
                    android:layout_height="@dimen/player_items_img_height"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/player_items_txt_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/player_items_txt_text_size"
                    android:text="@string/default_item_name"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/player_items_img_third"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/party_clo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/party_clo_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/party_img_first"
                    android:layout_width="@dimen/party_img_width"
                    android:layout_height="@dimen/party_img_height"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/party_txt_first_health_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/party_txt_text_size"
                    android:text="@string/health_shorthand"
                    android:gravity="center"
                    app:layout_constraintLeft_toRightOf="@id/party_img_first"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/party_txt_first_current_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/party_txt_text_size"
                    android:text="@string/default_health_text"
                    android:layout_marginLeft="@dimen/party_txt_margin_left_between_label"
                    app:layout_constraintLeft_toRightOf="@id/party_txt_first_health_label"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/party_txt_first_slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/party_txt_text_size"
                    android:text="@string/forward_slash"
                    app:layout_constraintLeft_toRightOf="@id/party_txt_first_current_health"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/party_txt_first_max_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/party_txt_text_size"
                    android:text="@string/default_health_text"
